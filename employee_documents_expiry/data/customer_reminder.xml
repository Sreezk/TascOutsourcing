<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <record id="email_template_customer_reminder" model="mail.template">
            <field name="name">Reminder notification for the expiry of your Document...!!</field>
            <field name="email_from">${object.company_id.name}&lt;${object.company_id.email}&gt;</field>
            <field name="email_to">${object.customer_ref.email}</field>
            <field name="subject">Reminder notification for the expiry of your Document on -${object.expiry_date or 'n/a' }</field>
            <field name="model_id" ref="employee_documents_expiry.model_customer_document" />
            <field name="auto_delete" eval="True" />
            <field name="body_html"><![CDATA[
                <div class="page">
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Hello ${object.user_id.name},</p>
                        <p> This Email Is To alert You that new Manufacturing order is
                        Created. Kindly allocate the schedule date as per the delivery date to the customer.</p>
                    </div>
                    <div>
                       <table class="table table-condensed">
                             <thead>
                                <tr>
                                    <th style="background-color:#9b9da0 !important;">Order Name</th>
                                    <th style="background-color:#9b9da0 !important;">Planned StartDate</th>
<!--                                    <th style="background-color:#9b9da0 !important;">Assigned To</th>-->
                                    <th style="background-color:#9b9da0 !important;">Link</th>
                                </tr>
                             </thead>
                             <tbody>
                                    <tr>
                                        <td><span>${object.name}</span></td>
                                        <td><span>${object.date_planned_start}</span></td>
<!--                                        <td><span>${object.employeee_name}</span></td>-->
                                        <td><a href="/web/login/">View Now</a></td>
                                    </tr>
                             </tbody>
                       </table>
                    </div>
                </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>
